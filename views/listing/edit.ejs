<% layout("/layouts/boilerplate") %>
<body>
    <h3>Edit your Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" />
            <div class="invalid-feedback">Please enter a title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input required type="text" name="listing[description]" class="form-control" value="<%= listing.description %>">
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">Original Listing Image <br>
            <img style="height: 300px; width:300px;" src="<%= originalImageUrl %>" alt="image"  >
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image][url]" class="form-control">
        
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input required name="listing[price]" class="form-control" value="<%= listing.price %>">
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input required type="text" name="listing[country]" class="form-control" value="<%= listing.country %>">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required type="text" name="listing[location]" class="form-control" value="<%= listing.location %>">
            <div class="invalid-feedback">Location name should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn">Edit</button>
    </form>
</body>